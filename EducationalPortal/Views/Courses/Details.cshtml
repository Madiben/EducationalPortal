@using EducationalPortal.DataAccess.Models.Entities;
@model Course
<div class="u-clearfix u-sheet u-valign-middle u-sheet-1">
    <div class="u-clearfix u-expanded-width u-layout-wrap u-layout-wrap-1">
          <div class="u-gutter-0 u-layout">
            <div class="u-layout-row">
              <div class="u-align-left u-container-style u-layout-cell u-right-cell u-size-26 u-layout-cell-1">
                <div class="u-container-layout u-valign-middle u-container-layout-1">

                  <h1 class="u-custom-font u-text u-text-1">@Model.Name</h1>
                  <h4 class="u-custom-font u-text u-text-1">Credits: @Model.Credit</h4>
                  <p class="u-text u-text-2">@Model.Description</p>
                  <p class="u-text u-text-default u-text-3">Image from 
                    <b>
                      <a href="https://www.freepik.com/free-photos-vectors/background" target="_blank">Freepik</a>
                    </b>
                  </p>
                </div>
              </div>
              <div class="u-container-style u-layout-cell u-left-cell u-size-34 u-layout-cell-2">
                <div class="u-container-layout u-valign-middle u-container-layout-2">
                  <div class="u-expanded-height u-palette-4-base u-shape u-shape-rectangle u-shape-1"></div>
                  <img src="//images03.nicepage.com/c461c07a441a5d220e8feb1a/abed2ad8023151c49fcf481f/high-angle-app-learning-new-language-phone_23-2148293463.jpg" alt="" class="u-align-left u-expanded-width-xs u-image u-image-default u-image-1">
                </div>
              </div>
            </div>
          </div>
        </div>
    <div class="u-clearfix u-expanded-width u-layout-wrap u-layout-wrap-1">
        <div class="u-gutter-0 u-layout">
            <div class="u-layout-row">
                <div class="u-align-left u-container-style u-layout-cell u-right-cell u-size-26 u-layout-cell-1">
                    <div class="u-container-layout u-valign-middle u-container-layout-1">

                        <h1 class="u-custom-font u-text u-text-1">List Materials</h1>
                        <h1 class="u-custom-font u-text u-text-1">@Model.Materials</h1>
                        <p class="u-text u-text-2">List Skills @Model.Skills</p>
                        <p class="u-text u-text-default u-text-3">
                            Image from
                            <b>
                                <a href="https://www.freepik.com/free-photos-vectors/background" target="_blank">Freepik</a>
                            </b>
                        </p>
                    </div>
                </div>
                <div class="u-container-style u-layout-cell u-left-cell u-size-34 u-layout-cell-2">
                    <div class="u-container-layout u-valign-middle u-container-layout-2">
                        <div class="u-expanded-height u-palette-4-base u-shape u-shape-rectangle u-shape-1"></div>
                        <img src="//images03.nicepage.com/c461c07a441a5d220e8feb1a/abed2ad8023151c49fcf481f/high-angle-app-learning-new-language-phone_23-2148293463.jpg" alt="" class="u-align-left u-expanded-width-xs u-image u-image-default u-image-1">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>