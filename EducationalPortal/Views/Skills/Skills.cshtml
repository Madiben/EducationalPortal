@using EducationalPortal.DataAccess.Models.Entities;
@model List<Skill>
@{
    ViewData["Title"] = "Skills List";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @if (Model.Count == 0)
    {
        <h4>No data Available</h4>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Level</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var skill in Model)
                {
                    <tr>
                        <th scope="row">@skill.SkillId</th>
                        <td>@skill.Name</td>
                        <td>@skill.Level</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Skills" asp-route-id="@skill.SkillId">
                                <img src="~/images/edit.png" class="icon" alt="Edit">
                            </a>
                            <a asp-action="Delete" asp-controller="Skills" asp-route-id="@skill.SkillId">
                                <img src="~/images/delete.png" class="icon" alt="Delete">
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a asp-action="Add">+ Add Skill</a>
</div>